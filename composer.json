{
    "name": "lysice/laravel-weather",
    "description": "a weather package for laravel",
    "keywords": ["composer", "weather", "laravel"],
    "autoload": {
        "psr-4": {
            "Lysice\\Weather\\": "src",
            "Lysice\\Weather\\Exceptions\\" : "Exceptions"
        }
    },
    "extra" : {
        "laravel" : {
            "providers" : [
                "Lysice\\Weather\\WeatherServiceProvider"
            ]
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "lysice",
            "email": "snowist@126.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "~6.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5",
        "mockery/mockery": "~1.1"
    }
}
